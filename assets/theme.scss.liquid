      &:not([type="submit"]) {
        font-size: em(15px);
        height: 50px;
        line-height: 48px;
        padding: 0 30px;
      }
    }

  }

  &.btn--outline {

    background: transparent;
    border: 2px solid;

    &.btn--color {
      color: $colorBtnPrimary;
      border-color: $colorBtnPrimary;
      &:hover {
        background: $colorBtnPrimary;
      }
    }

    &.btn--dark {
      color: $colorBtnSecondary;
      border-color: $colorBtnSecondary;
      &:hover{
