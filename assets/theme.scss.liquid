        background: #fff;
        color: #000 !important;
      }
    }

    &:hover {
      color: #fff;
    }

  }

  &.btn--fill {

    color: $colorBtnText;
    top: -1px;
    position: relative;
    border: none;

    &.btn--color {
      background: $colorBtnPrimary;
      &:hover {
